{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "EasyDB编译",
            "command": "C:\\w64devkit\\bin\\gcc.exe",
            "args": [
                "-static",
                "-g",
                "easydb.c",
                "index.c",
                "${file}",
                "-o",
                "${fileDirname}\\run.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "EasyDB Win32GUI编译",
            "command": "C:\\w64devkit\\bin\\gcc.exe",
            "args": [
                "-static",
                "-g",
                "-mwindows",
                "easydb.c",
                "index.c",
                "${file}",
                "-lgdi32",
                "-lcomctl32",
                "-o",
                "${fileDirname}\\run.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}